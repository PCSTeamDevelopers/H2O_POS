<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" android:padding="20dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TableRow android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:gravity="center|right">

                <TableRow android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#aaa"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"></TableRow>

                <TextView android:text="@string/server_connection" android:layout_height="wrap_content" android:layout_width="190dp"
                    android:textColor="@color/blue_" android:textSize="20dp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp">

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_hostip"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:gravity="right" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/host_ar"
                    android:id="@+id/ip_tv"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp">

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_port"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:inputType="number"
                    android:gravity="right" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/port_ar"
                    android:id="@+id/textView"
                    android:textColor="#000"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:gravity="center|right">

                <TableRow
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#aaa"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:text="@string/design_settings"
                    android:layout_height="wrap_content"
                    android:layout_width="130dp"
                    android:textColor="@color/blue_"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp">

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_grid_or_menu"
                    android:checked="false"
                    android:layout_marginRight="5dp"
                    android:splitTrack="false"
                    android:singleLine="false"
                    android:showText="false"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/categ_display"
                    android:id="@+id/textView9"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grid_layout"
                    android:id="@+id/textView6"
                    android:textColor="#000"
                    android:layout_marginRight="10dp"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal">

                <TableRow
                    android:layout_height="1dp"
                    android:layout_width="100dp"
                    android:background="#aaa"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:text="@string/font_ar"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/blue_"
                    android:textSize="20dp" />

                <TableRow
                    android:layout_height="1dp"
                    android:layout_width="100dp"
                    android:background="#aaa"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp" />
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="2"
                    android:columnCount="4"
                    android:layout_gravity="center_horizontal">

                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/np_font_size"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/english_ar"
                        android:id="@+id/textView2"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="20dp"
                        android:textColor="#000" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/arabic_ar"
                        android:id="@+id/textView5"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="20dp"
                        android:textColor="#000" />

                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/np_ar_font_size"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_gravity="center" />
                </GridLayout>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="right">

                <TableRow
                    android:layout_height="1dp"
                    android:layout_width="100dp"
                    android:background="#aaa"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:text="@string/tables_screen"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/blue_"
                    android:textSize="20dp" />

                <TableRow
                    android:layout_height="1dp"
                    android:layout_width="100dp"
                    android:background="#aaa"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="2"
                    android:columnCount="4"
                    android:layout_gravity="center_horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/tables_no_colom"
                        android:id="@+id/textView3"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="20dp"
                        android:textColor="#000" />

                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/column_t_np"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_gravity="center" />

                </GridLayout>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <TableRow
                    android:layout_height="1dp"
                    android:layout_width="100dp"
                    android:background="#aaa"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:text="@string/orders_screen"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/blue_"
                    android:textSize="20dp" />

                <TableRow
                    android:layout_height="1dp"
                    android:layout_width="100dp"
                    android:background="#aaa"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center">
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="2"
                    android:columnCount="4"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/item_no_colom"
                        android:id="@+id/textView4"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="20dp"
                        android:textColor="#000" />

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/item_icon_height"
                        android:id="@+id/textView8"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="20dp"
                        android:textColor="#000" />

                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/np_item_icon_height"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_gravity="center" />

                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/column_i_np"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_gravity="center" />
                </GridLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                <com.andexert.library.RippleView
                    android:id="@+id/rippleview_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    rippleDuration="200"
                    rv_alpha="128"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Save"
                        android:background="@drawable/button_blue_plain"
                        android:id="@+id/btn_save"
                        android:textStyle="bold"
                        android:textColor="#eee"
                        android:layout_below="@+id/et_password"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp" />

                </com.andexert.library.RippleView>
            </TableRow>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>