<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:angle="270"
                android:centerY="0.5"
                android:endColor="@color/gray_pressed"
                android:startColor="@color/gray_pressed" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:angle="270"
                android:centerY="0.5"
                android:endColor="@color/gray"
                android:startColor="@color/gray_pressed" />
        </shape>

    </item>
</selector>