<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:angle="270"
                android:centerY="0.5"
                android:endColor="@color/navy"
                android:startColor="@color/blue_darker" />
        </shape>
    </item>
        <item>
                <shape android:shape="rectangle" >
                    <corners android:radius="5dp" />
                    <gradient
                        android:angle="270"
                        android:centerY="0.5"
                        android:endColor="@color/blue_darker"
                        android:startColor="@color/blue_" />
                </shape>

    </item>

</selector>