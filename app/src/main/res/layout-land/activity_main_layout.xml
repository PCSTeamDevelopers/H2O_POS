<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:background="@drawable/h2o_logo" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:columnCount="3"
        android:rowCount="5"
        android:id="@+id/grid_numberPad"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="10dp">

        <com.andexert.library.RippleView
            android:id="@+id/rippleview_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rv_alpha="128">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="7"
                android:id="@+id/btn_7"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/button_blue"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp" /></com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rippleview_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rv_alpha="128">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="8"
                android:id="@+id/btn_8"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/button_blue"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp" /></com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rippleview_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rv_alpha="128">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="9"
                android:id="@+id/btn_9"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@drawable/button_blue"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp" /></com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rippleview_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rv_alpha="128">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="4"
                android:id="@+id/btn_4"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/button_blue"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" /></com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rippleview_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rv_alpha="128">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="5"
                android:id="@+id/btn_5"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/button_blue"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" /></com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rippleview_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rv_alpha="128">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="6"
                android:id="@+id/btn_6"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@drawable/button_blue"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" /></com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rippleview_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rv_alpha="128">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="1"
                android:id="@+id/btn_1"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@drawable/button_blue"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" /></com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rippleview_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rv_alpha="128">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="2"
                android:id="@+id/btn_2"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@drawable/button_blue"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" /></com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rippleview_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rv_alpha="128">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="3"
                android:id="@+id/btn_3"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@drawable/button_blue"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" /></com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rippleview_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            rv_alpha="128">
            <Button
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:text="0"
                android:id="@+id/btn_0"
                android:layout_row="3"
                android:layout_column="0"
                android:background="@drawable/button_blue"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" /></com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/rippleview_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            rv_alpha="128"
            >
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btn_clear"
                android:layout_row="3"
                android:layout_column="2"
                android:background="@drawable/button_blue_clear"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"/> </com.andexert.library.RippleView>
    </GridLayout>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_password"
        android:textSize="30sp"
        android:windowSoftInputMode="stateAlwaysHidden|adjustNothing"
        android:textColor="#3370BD"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcome_en"
        android:textStyle="bold|italic"
        android:id="@+id/welcome_tv"
        android:layout_alignParentTop="true"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:textColor="#3a89de"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:gravity="left"
        android:layout_toLeftOf="@+id/grid_numberPad" />

    <android.support.design.widget.FloatingActionButton android:id="@+id/fab_info"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_dialog_info"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android.support.design:fabSize="mini"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp" />

    <android.support.design.widget.FloatingActionButton android:id="@+id/fab_settings"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_settings"
        android:layout_alignTop="@+id/fab_info"
        android:layout_toRightOf="@+id/fab_info"
        android:layout_toEndOf="@+id/fab_info"
        android.support.design:fabSize="mini"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <android.support.design.widget.FloatingActionButton android:id="@+id/fab_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_ar"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/fab_settings"
        android:layout_toRightOf="@+id/fab_settings"
        android:layout_toEndOf="@+id/fab_settings"
        android.support.design:fabSize="mini"
        />

    <com.andexert.library.RippleView
        android:id="@+id/rippleview_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        rippleDuration="200"
        rv_alpha="128">
        <Button
            android:layout_width="100dp"
            android:layout_height="35dp"

            android:text="Login"
            android:id="@+id/btn_save"
            android:textStyle="bold"
            android:textColor="#eee"
            android:layout_below="@+id/et_password"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:background="@drawable/button_blue_plain" />

    </com.andexert.library.RippleView>


</RelativeLayout>
